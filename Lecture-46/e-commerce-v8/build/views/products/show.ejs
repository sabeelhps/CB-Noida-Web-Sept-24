<% layout('layout/boilerplate') -%>

<div class="row">
    <div class="col-lg-6">
        <div class="col-lg-4">
            <div class="card mx-auto mb-3" style="width: 23rem;">
                <img src="<%=product.imageUrl%>" class="card-img-top" alt="<%=product.name%>">
                <div class="card-body">
                    <h5 class="card-title"><%=product.name%> </h5>
                    <p class="card-text"><%=product.desc%></p>
                    <h5 class="card-title">$<%=product.price%> </h5>
                    <a href="#" class="btn btn-sm btn-primary">Buy Now</a>
                    <% if(currentUser && product.author && product.author.equals(currentUser._id)) {%>
                        <a href="/api/v1/products/<%=product._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                        <form action="/api/v1/products/<%=product._id%>?_method=DELETE" class="d-inline-block" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                    <a href="#" class="btn btn-sm btn-secondary">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <h1 class="display-6">Leave a Review</h1>
        <form action="/api/v1/products/<%=product._id%>/reviews" method="post">
            <div class="mb-0">
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label class="form-label" for="comment">Comment</label>
                <textarea class="form-control" name="comment" id="comment" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Submit</button>
        </form>
        <div class="my-3">
            <% for(const review of product.reviews){ %>
                <div class="card mb-2">
                    <div class="card-body">
                        <p class="starability-result" data-rating="<%=review.rating%>">
                            Rated: <%=review.rating%> stars
                        </p>
                        <p><%=review.comment%></p>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </div>
                  </div>
            <% } %> 
        </div>
    </div>
</div>