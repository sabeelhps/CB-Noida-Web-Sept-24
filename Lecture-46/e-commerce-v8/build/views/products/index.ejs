<% layout('layout/boilerplate') -%>

<section>
    <div class="row products">
        <h4 class="display-4 bg-light p-3 rounded"><i class="bi bi-basket me-3"></i><span>Shopping Cart</span></h4>
        <% if(products.length===0){ %> 
            <p>No Products Available</p>
       <% }else{  %> 
            <% for(let product of products) {%>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card shadow-sm mx-auto position-relative" style="width: 20rem;">
                        <img src="<%=product.imageUrl%>" class="card-img-top" alt="item image">
                        <span class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y" style="top:41%;left:5%">3 &star; | 5</span>
                        <div class="card-body">
                          <h5 class="card-title d-flex justify-content-between align-items-center">
                            <span><%= product.name %></span>
                            <span class="btn like-button bg-light rounded-circle">
                                <i class="bi bi-heart fs-5"></i>                            </span>
                          </h5>
                          <p class="card-text fw-light"><%= product.desc.substring(0,70)%></p>
                          
                          <p class="text-muted">5  reviews</p>
                            
                          <h6 class="card-title"><span class="fw-lighter fs-6 text-decoration-line-through">Rs.<%= product.price %></span> Rs.<%= product.price %> <span class="fw-light fs-6 text-warning">( 50 % OFF )</span> </h6>
                          <a href="/api/v1/products/<%=product._id%>" class="btn btn-sm btn-dark">Buy Now</a>
                        </div>
                    </div>
                </div>
            <% } %> 
        </div>
      <% } %>  
</section>